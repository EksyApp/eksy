{
  "name": "EKSY",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --verbose --coverage",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean",
    "clean:android": "cd android/ && ./gradlew clean && cd .. && react-native run-android",
    "android:build": "cd android && ./gradlew assembleRelease",
    "android:install": "cd android && ./gradlew assembleRelease && ./gradlew installRelease",
    "android:hockeyapp": "cd android && ./gradlew assembleRelease && puck -submit=auto app/build/outputs/apk/app-release.apk",
    "android:devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android:logcat": "$ANDROID_HOME/platform-tools/adb logcat *:S ReactNative:V ReactNativeJS:V",
    "android:shake": "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "git-hook": "npm run lint -s && npm test -s",
    "coverage": "jest --coverage",
    "coverageToCoveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "full:clean:windows": "rm -rf node_modules/ && npm cache clean && npm install && cd android/ && gradlew clean && cd .. ",
    "clean:windows": "cd android/ && gradlew clean && cd .. ",
    "clean:linux": "rm -rf node_modules package-lock.json yarn.lock && npm install && cd android/ && gradle clean && cd .. && rnpm link"
  },
  "dependencies": {
    "firebase": "^4.1.5",
    "geofire": "^4.1.2",
    "mobile-center": "^0.8.1",
    "mobile-center-analytics": "^0.8.1",
    "mobile-center-crashes": "^0.8.1",
    "prop-types": "16.0.0-alpha.12",
    "react": "16.0.0-alpha.12",
    "react-addons-shallow-compare": "^15.6.0",
    "react-native": "0.46.4",
    "react-native-code-push": "4.1.0-beta",
    "react-native-elements": "^0.16.0",
    "react-native-expandable-view": "^0.1.4",
    "react-native-fast-image": "0.0.11",
    "react-native-fetch-blob": "^0.10.6",
    "react-native-image-picker": "^0.26.3",
    "react-native-interactable": "0.1.1",
    "react-native-maps": "0.16.0",
    "react-native-modal": "^2.4.0",
    "react-native-parallax-view": "^2.0.6",
    "react-native-router-flux": "4.0.0-beta.17",
    "react-native-snap-carousel": "2.4.0",
    "react-native-splash-screen": "^2.1.0",
    "react-native-swiper": "^1.5.10",
    "react-native-vector-icons": "4.3.0",
    "react-native-view-more-text": "^1.1.2",
    "react-redux": "^5.0.5",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^4.8.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-jest": "20.0.3",
    "babel-preset-react-native": "2.1.0",
    "coveralls": "^2.13.1",
    "jest": "20.0.4",
    "react-addons-test-utils": "16.0.0-alpha.12",
    "react-dom": "^16.0.0-alpha.12",
    "react-test-renderer": "^16.0.0-alpha.12",
    "redux-mock-store": "^1.2.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|connectStyle)/"
    ],
    "testPathIgnorePatterns": [
      "App/Images",
      "node_modules",
      "App/Data",
      "App/Store",
      "App/Theme",
      "App/includes"
    ],
    "coveragePathIgnorePatterns": [
      "App/Images",
      "node_modules",
      "App/Data",
      "App/Store",
      "App/Theme",
      "App/includes"
    ]
  }
}
